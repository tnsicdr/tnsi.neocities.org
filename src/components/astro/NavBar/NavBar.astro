---
import { getLangFromUri, useTranslation } from "../../../shared/i18n/utils";
import { MainNavLinks } from "../../../shared/nav/navLinks";
import Link from "../Link/Link.astro";

const lang = getLangFromUri(Astro.url);
const t = useTranslation(lang);
---

<nav>
  <ul class="navlist">
    {
      MainNavLinks.map((link) => (
        <li>
          <Link path={link.path}>{t(link.labelKey)}</Link>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  .navlist {
    display: flex;
    flex-direction: row;
    gap: 1rem;
    list-style: none;
  }
</style>
